{% endif %}
{% for prop in columns %}
 * @property {{ prop['type'] }} ${{ prop['name'] }}
{% endfor %}
 */
class {{ resource }} extends Model implements ICrudResource
{
{% if factory %}
    use HasFactory;
{% endif %}
{% if softDeletes %}
